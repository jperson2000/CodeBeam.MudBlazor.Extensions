@namespace MudExtensions.Docs.Examples

<MudGrid>
    <MudItem xs="12" sm="8" Class="d-flex flex-wrap justify-space-around gap-4">
        <div>
            <MudText Typo="Typo.h6" GutterBottom="true">Text only</MudText>
            <MudPaper Width="220px">
                <MudListExtended T="string" Dense="@_dense" Gutters="@_gutters" Padding="@_padding">
                    <MudListItemExtended T="string" Text="Single List Item" SecondaryText="Secondary Text" />
                    <MudListItemExtended T="string" Text="Single List Item" SecondaryText="Secondary Text" />
                    <MudListItemExtended T="string" Text="Single List Item" SecondaryText="Secondary Text" />
                </MudListExtended>
            </MudPaper>
        </div>

        <div>
            <MudText Typo="Typo.h6" GutterBottom="true">Icons with text</MudText>
            <MudPaper Width="220px">
                <MudListExtended T="string" Dense="@_dense" Gutters="@_gutters" Padding="@_padding">
                    <MudListItemExtended T="string" Text="Single List Item" Icon="@Icons.Material.Filled.Bookmark" SecondaryText="Secondary Text" />
                    <MudListItemExtended T="string" Text="Single List Item" Icon="@Icons.Material.Filled.Bookmark" IconColor="Color.Primary" SecondaryText="Secondary Text" />
                    <MudListItemExtended T="string" Text="Single List Item" Icon="@Icons.Material.Filled.Bookmark" IconColor="Color.Secondary" SecondaryText="Secondary Text" />
                </MudListExtended>
            </MudPaper>
        </div>

        <div>
            <MudText Typo="Typo.h6" GutterBottom="true">Avatar with text</MudText>
            <MudPaper Width="220px">
                <MudListExtended T="string" Dense="@_dense" Gutters="@_gutters" Padding="@_padding">
                    <MudListItemExtended T="string" Text="Photo 1" Avatar="@Icons.Material.Filled.Image" SecondaryText="@DateTime.Today.AddYears(-1).ToShortDateString()" />
                    <MudListItemExtended T="string" Text="Photo 2" Avatar="@Icons.Material.Filled.Image" IconColor="Color.Dark" SecondaryText="@DateTime.Today.AddMonths(-1).ToShortDateString()" />
                    <MudListItemExtended T="string" Text="Photo 3" Avatar="@Icons.Material.Filled.Image" IconColor="Color.Error" SecondaryText="Today" />
                </MudListExtended>
            </MudPaper>
        </div>
    </MudItem>

    <MudItem xs="12" sm="4">
        <MudCheckBox @bind-Value="@_dense" Label="Dense" Color="Color.Default" />
        <MudCheckBox @bind-Value="@_padding" Label="Padding" Color="Color.Primary" />
        <MudCheckBox @bind-Value="@_gutters" Label="Gutters" Color="Color.Secondary" />
    </MudItem>
</MudGrid>

@code {
    bool _dense = false;
    bool _padding = true;
    bool _gutters = true;

    MudListItemExtended<string> selectedItem = new();
}